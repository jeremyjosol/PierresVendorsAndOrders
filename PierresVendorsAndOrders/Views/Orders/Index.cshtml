@{
  Layout = "_Layout";
}

    @using PierresVendorsAndOrders.Models;

    <h1>Orders</h1>

    @if (Model.Count == 0)
    {
      <p>Your order list is empty.</p>
    }
    <ul>
      @foreach (Order order in Model)
      {
      <li><a href='/vendors/@Model["vendor"].Id/orders/@order.Id'>@order.Product</a></li>
      }
    </ul>
    <a href='/vendors/@Model["vendor"].Id/orders/new'>Add a new product.</a>

    <form action="/orders/delete" method="post">
      <button type="submit" name="button">Delete Order List</button>
    </form>
