@{
  Layout = "_Layout";
}

@using PierresVendorsAndOrders.Models;

<div class="links">
  
  <h2>@Model["vendor"].Name 
  <br />  
  Order List:</h2>

  @if (!((List<Order>)Model["orders"]).Any())
  {
    <p>Your order list is empty.</p>
  }
    
  <ol>
  @foreach (Order order in @Model["orders"])
  {
    <li><a href='/vendors/@Model["vendor"].Id/orders/@order.Id'>@order.Id. @order.Product</a></li>
  }
  </ol>
  <a href='/vendors/@Model["vendor"].Id/orders/new'>New Order |</a>
  <a href='/vendors'>View Vendors |</a>
 <a href='/'>Home</a>
</div>