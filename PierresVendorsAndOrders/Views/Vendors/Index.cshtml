@{
  Layout = "_Layout";
}

@using PierresVendorsAndOrders.Models;

<div class="links">
    
  <h1>Vendors:</h1>
  <br />

  @if (@Model.Count == 0)
  {
    <h3>No vendors have been added yet!</h3>
  } 
  else
  {
    @foreach (Vendor vendor in Model)
    {
      <h3><a href='/vendors/@vendor.Id'>@vendor.Name</a></h3>
    }
    <br />
    <form action="/vendors/delete" method="post">
      <button type="submit" name="button" class="btn btn-danger btn-sm">Delete All</button>
  </form>
  }
  <br />
    <a href='/vendors/new'>Add Vendor | </a><a href='/'>Home</a>
</div>