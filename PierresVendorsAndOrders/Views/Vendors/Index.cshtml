@{
  Layout = "_Layout";
}

@using PierresVendorsAndOrders.Models;

<div class="links">
    
  <h1>Vendors:</h1>
  <br />

  @if (@Model.Count == 0)
  {
    <h3>No vendors have been added yet!</h3>
  } 

  @foreach (Vendor vendor in Model)
  {
    <h3><a href='/vendors/@vendor.Id'>@vendor.Name</a></h3>
  }
  
  <form action="/vendors/delete" method="post">
    <button type="submit" name="button">Delete All Vendors</button>
  </form>
  <p><a href='/'>Back home</a></p>

</div>